             x:Class="Matricula.AppMovil.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Start">



            <Button
                
                Text="Ver los Estudiantes"
                Command="{Binding  VerEstudiantesRegistradosCommand}" Margin="10,10,10,0">

            </Button>
                <Button
                
                Text="Ver Mujeres registradas"
                Command="{Binding  VerMujeresRegistradosCommand}"  Margin="10,10,10,0" >


                </Button>
                    <Button
                
                Text="Ver Hombres Resgistrados"
                Command="{Binding  VerHombresRegistradosCommand}"  Margin="10,10,10,0">


                    </Button>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
